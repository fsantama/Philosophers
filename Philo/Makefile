# PROGRAM FOR COMPILING C PROGRAMS
CC 		=	gcc
# C COMPILER FLAGS
CFLAGS =	-Werror -Wall -Wextra

NAME 	=	philo


# =============================================================================#
#                              MANDATORY PART                                  #
# =============================================================================#

SRCS	=	src/ft_check_args.c \
			src/ft_error.c \
			src/init_structures.c \
			src/philosophers.c \
			src/utils.c \
			
OBJS	=	$(SRCS:.c=.o)

# =============================================================================#
#                                  RULES                                       #  
# =============================================================================#


all : $(NAME) 

$(NAME) : $(OBJS)
	@echo "$(CYAN) ======================================================="
	@echo "|		        _     _ _     		        |"
	@echo "|		  _ __ | |__ (_) | ___  		|"
	@echo "|		 | '_ \| '_ \| | |/ _ \ 		|"
